<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main_1_4_2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/main_card_margin_vertical"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="@dimen/main_card_margin_horizontal"
    android:layout_marginTop="@dimen/main_card_margin_vertical"
    android:layout_weight="1"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="@dimen/main_card_margin_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_main_card_42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_card_main_42_title"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_main_card_42"
            android:layout_margin="@dimen/card_title_margin"
            android:gravity="center"
            android:text="Argy"
            android:textColor="@color/cardview_light_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_main_card_42"
            android:orientation="horizontal"
            android:clickable="true"
            android:padding="@dimen/card_button_margin"
            android:background="@android:color/background_light">

            <ImageView
                android:id="@+id/img_main_card42_facebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/facebook48" />

            <ImageView
                android:id="@+id/img_main_card42_events"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ticket_86171" />

            <ImageView
                android:id="@+id/img_main_card42_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/share_48" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
