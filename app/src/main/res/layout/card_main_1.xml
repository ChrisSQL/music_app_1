<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_main_1_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/main_card_margin_horizontal"
    android:layout_marginStart="@dimen/main_card_margin_horizontal"
    android:layout_marginTop="@dimen/main_card_margin_vertical"
    android:background="@color/colorPrimaryLightDefault"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_main_card_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_card_main_1_title"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_main_card_1"
            android:layout_margin="@dimen/card_title_margin"
            android:gravity="center"
            android:text="999999999"
            android:textColor="@color/cardview_light_background"/>

        <!--<TextView-->
            <!--android:id="@+id/tv_card_main_1_title1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:background="@color/colorPrimaryLightDefault"-->
            <!--android:gravity="center_vertical|center_horizontal|fill"-->
            <!--android:padding="15dp"-->
            <!--android:text="Sunil Sharpe @ Project"-->
            <!--android:textColor="@color/colorPrimaryBlack" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_main_card_1"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="@dimen/card_button_margin"
            android:background="@android:color/background_light">

            <ImageView
                android:id="@+id/img_main_card1_facebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/facebook48" />

            <ImageView
                android:id="@+id/img_main_card1_events"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ticket_86171" />

            <ImageView
                android:id="@+id/img_main_card1_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/share_48" />

        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>